<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_job_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Job Numbers:790993"
        android:textAllCaps="true"
        android:textColor="#1a1919"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_job_numbers"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Company :Sheng Shing Warehouse"
        android:textAllCaps="true"
        android:textColor="#1a1919"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Address :56 Changi Road Singapore 859056"
        android:textAllCaps="true"
        android:textColor="#1a1919"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_company"
        android:background="#52f752"
        android:text="Accept" />


</RelativeLayout>